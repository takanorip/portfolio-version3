<!doctype html>
<html lang="en">
  <head>
    <title>{{ renderData.title or title or metadata.title }}</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="{{ renderData.description or description or metadata.description }}">
    <meta property="og:url" content="{{ metadata.url }}"/>
    <meta property="og:type" content="website"/>
    <meta property="og:title" content="{{ renderData.title or title or metadata.title }}"/>
    <meta property="og:description" content="{{ renderData.description or description or metadata.description }}"/>
    <meta property="og:image" content="{{ metadata.ogimage }}"/>
    <link rel="stylesheet" href="{{ '/css/index.css' | url }}">
    <script type="text/javascript" src="//webfont.fontplus.jp/accessor/script/fontplus.js?AOiFqnnHNRI%3D&box=gysCShwdQ~8%3D&aa=1&ab=2" charset="utf-8"></script>
  </head>
  <body {% if templateClass %} class="{{ templateClass }}"{% endif %}>
    <header class="takanorip-header">
      <h1 class="takanorip-headerLogo"><a class="takanorip-headerLogoLink" href="{{ '/' | url }}">takanorip</a></h1>
      <nav class="takanorip-nav">
        <ul class="takanorip-headerList">
            <li class="takanorip-headerItem">
              <a class="takanorip-headerLink top" href="{{ '/' | url }}">top</a>
            </li>
            <li class="takanorip-headerItem">
              <a class="takanorip-headerLink works" href="{{ '/works' | url }}">works</a>
            </li>
            <li class="takanorip-headerItem">
              <a class="takanorip-headerLink about" href="{{ '/about' | url }}">about</a>
            </li>
          </ul>
      </nav>
    </header>
    <main class="takanorip-contents">
      {{ content | safe }}
    </main>
  </body>
</html>