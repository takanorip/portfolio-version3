---
layout: layouts/blogBase.njk
pagination:
  data: collections
  size: 1
  alias: tag
permalink: /blog/tags/{{ tag }}/
filter:
  - works
templateClass: blog-list-content
title: BLOG
---
{% include "components/head.njk" %}
{% set taglist = collections[ tag ] %}

<ul class="takanorip-blogList">
{%- for item in taglist | reverse -%}
  <li class="takanorip-blogListItem">
    <a class="takanorip-blogListLink" href="{{ item.url }}">
      <div class="takanorip-blogListLinkWrap">
          {{ item.data.title }}
      </div>
    </a>
  </li>
{%- endfor -%}
</ul>